.container.user-page
  %header.user-nav
    .media
      .media-left
        = image_tag @user.set_default_avatar, alt: "64x64", src: @user.avatar, data: {src: "holder.js/64x64", holder: {rendered: "true"}}, class: "media-object"
      .media-body
        %h4#top-aligned-media.media-heading
          = @user.name
          %span.label.label-default.project-number
            = @user.count_prototypes
            %i Projects
        .proto-user
          %span.degree
            = @user.participation
        .row
          .col-md-6
            %h4 Occupation
            %p
              = @user.occupation
          .col-md-6
            %h4 Profile
            %p
              = @user.profile

.container.proto-list
  .row
    - @prototypes.each do |proto|
      .col-sm-4.col-md-3.proto-content
        .thumbnail
          = link_to (image_tag proto.main_thumbnail), prototype_path(proto)
          .caption
            %h3
              = proto.title
            .proto-meta
              .proto-date
                = proto.posted_date
            %ul.list-inline
              - proto.get_tags.each do |tag|
                %li
                  =link_to tag.name, tag_path(tag), class: "btn btn-default"
.text-center
  = paginate @prototypes
