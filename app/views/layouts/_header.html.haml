#brand.navbar.navbar-logo.navbar-fixed-top
  .container
    = link_to (image_tag asset_path("logo.png"), alt: "PROTO TYPE - SHARE THE PROTOTYPE"), root_path, class: "navbar-brand"
.navbar.navbar-default.navbar-fixed-top
  .container
    = link_to (image_tag asset_path("logo.png"), alt: "PROTO TYPE - SHARE THE PROTOTYPE"), root_path, class: "navbar-brand"
    .navbar-collapse.collapse.navbar-responsive-collapse
      - if user_signed_in?
        //login
        %ul.nav.navbar-nav.navbar-right
          %li.dropdown
            %a.dropdown-toggle{aria: {expanded: false}, data: {toggle: "dropdown"}, role: "button"}
              = current_user.name
              %span.caret
            %ul.dropdown-menu{role: "menu"}
              %li
                = link_to "My page", user_path(current_user)
              %li
                = link_to "Edit profile", edit_user_path(current_user)
              %li
                = link_to "Sign out", destroy_user_session_path, method: :delete
          %li
            .btn.btn-default.navbar-btn
              = link_to "NEW PROTO", new_prototype_path
      - else
        //not login
        %ul.nav.navbar-nav.navbar-right
          %li
            .btn.btn-primary.navbar-btn
              = link_to "Get Started", new_user_session_path
